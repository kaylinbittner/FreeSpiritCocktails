<div class="container">
<h1> <%=  @cocktail.name %> </h1>
<%= image_tag ("/assets/sample.jpg"), :class => "style_image center-block" %>
<h3><% @cocktail.doses.each do |d| %>
     <%= d.description %> | <%= d.ingredient.name %> <%= link_to "❌", dose_path(d), method: :delete, data: {confirm: "Are you sure?"}, class: "x" %> <br>
    <% end %>
</h3>

<h2>Add Ingredients to this Cocktail:</h2>

 <%= render 'doses/form', cocktail: @cocktail, dose: Dose.new %>

<div class="bottom">
<%= link_to "Return to Cocktail List", cocktails_path, class: "btn btn-success center-block" %>
<%= link_to "Delete this Cocktail", cocktail_path(@cocktail), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-success center-block" %>
</div>
</div>


<%= render "./components/footer" %>
