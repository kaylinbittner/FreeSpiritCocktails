<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to cocktail_path(c) do %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_tag("https://res.cloudinary.com/dsolsmeep/image/upload/v1542383146/sample.jpg") %>);">
        <div class="card-category"> <%= c.name %> </div>
        </div>
        <% end %>
      </div>
       <% end %>
    </div>
  </div>
</div>
